    private void txtAStateChanged(javax.swing.event.ChangeEvent evt) {                                  
    lblA.setText(txtA.getValue().toString());        // TODO add your handling code here:
    }                                 

    private void txtBStateChanged(javax.swing.event.ChangeEvent evt) {                                  
    lblB.setText(txtB.getValue().toString());    // TODO add your handling code here:
    }                                 

    private void txtCStateChanged(javax.swing.event.ChangeEvent evt) {                                  
    lblC.setText(txtC.getValue().toString());    // TODO add your handling code here:
    }                                 

    private void btnCalcActionPerformed(java.awt.event.ActionEvent evt) {                                        
    int a = Integer.parseInt(txtA.getValue().toString());
    int b = Integer.parseInt(txtB.getValue().toString());
    int c = Integer.parseInt(txtC.getValue().toString());
    
    double d = Math.pow(b, 2) - 4 * a * c;
    
    lblDelta.setText(String.format("%.2f", d));
    
        if (d<0) {
            lblRaiz.setText("N√£o existem raizes Reais");
        }
            else {
            lblRaiz.setText("Existem Ra√≠zes Reais");        
                    }
        
        
        
        panResultado.setVisible(true);    // TODO add your handling code here:
    }                                       

